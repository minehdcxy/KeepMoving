<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ly_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">

        <RelativeLayout
            android:id="@+id/rl_item_trip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_item_tirp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="4dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/blue"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/item_trip_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:text="遇见-哈尔滨"/>
                <TextView
                    android:id="@+id/item_trip_date"
                    android:layout_below="@id/item_trip_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="10sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:text="2015.05.15"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/item_trip_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by    minehdcxy"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp" />

                <TextView
                    android:id="@+id/tv_item_upovte"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:background="@drawable/bg_blue_corner_style"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    android:text="赞"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>