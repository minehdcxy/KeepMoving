<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp">
    <LinearLayout
        android:id="@+id/ll_item_cinema_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_item_cinema_name"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="影院名字:"/>
    <TextView
        android:id="@+id/tv_item_cinema_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:text="地址:"/>
    <TextView
        android:id="@+id/tv_item_cinema_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:text="时间:"/>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:paddingTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_item_film_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_green"
            android:layout_marginRight="50dp"
            android:text="44元"/>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_film_buy_tickets"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:textColor="@color/dark_green"
            android:background="@drawable/bg_green_corner_style"
            android:textSize="12sp"
            android:text="购买"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>